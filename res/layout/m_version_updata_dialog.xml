<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/d_lollipopu_dialog_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/content_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="24dp"
                android:text="@string/main_version_update"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/sv_update"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:scrollbars="vertical" >

            <TextView
                android:id="@+id/updata_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#434a4e"
                android:textSize="14sp" />
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingLeft="24dp"
            android:paddingTop="8dp" >

            <Button
                android:id="@+id/updata_btn"
                android:layout_width="64dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/btn_dialog_selector"
                android:text="@string/d_dialog_modify"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/updata_cancel"
                android:layout_width="64dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="80dp"
                android:background="@drawable/btn_dialog_selector"
                android:text="@string/d_dialog_cancel"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>